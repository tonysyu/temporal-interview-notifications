{
  "name": "temporal-hello-world",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint --fix . --ext .ts",
    "worker": "ts-node src/worker.ts",
    "worker.watch": "nodemon src/worker.ts",
    "app": "ts-node src/app.ts",
    "app.watch": "nodemon src/app.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@temporalio/activity": "^1.5.2",
    "@temporalio/client": "^1.5.2",
    "@temporalio/worker": "^1.5.2",
    "@temporalio/workflow": "^1.5.2",
    "chalk": "^4.1.2",
    "express": "^4.18.2",
    "nanoid": "3.x"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.0",
    "@types/express": "^4.17.15",
    "@types/node": "^16.11.43",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "nodemon": "^2.0.12",
    "ts-node": "^10.8.1",
    "typescript": "^4.4.2"
  }
}
